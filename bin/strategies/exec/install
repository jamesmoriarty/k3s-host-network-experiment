#!/bin/sh -xe
# https://rancher.com/docs/k3s/latest/en/advanced/#starting-the-server-with-the-installation-script

curl -sfL https://get.k3s.io | K3S_KUBECONFIG_MODE="0644" INSTALL_K3S_EXEC="--disable-network-policy --bind-address=$(bin/ip) --node-ip=$(bin/ip) --node-external-ip=$(bin/ip) --cluster-cidr=192.168.0.0/16 --service-cidr=192.168.0.0/16" sh -

k3s kubectl apply -f minidlna.yaml

k3s kubectl wait deploy/minidlna --for condition=available